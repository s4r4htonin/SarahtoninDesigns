<%- include("../partials/header") %>

<div class="container-fixed">
    <h1>Sarahtonin Designs</h1>
</div>
<div class="container-fixed" id="projectsContainer">
    <!-- <h2>Recent Work</h2> -->
    <div class="container ">
        <div class="row">
            <!-- for loop to iterate over projects and make a card for each one -->
            <!-- Display index image -->
            <!-- Display project name -->
            <!-- Ability to click -> show page with more photos/info about project -->
            <% for (let i = 0; i < projects.length; i++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="card-deck">
                    <div class="card">
                        <div class="img-container">
                            <a href="/projects/<%= projects[i]._id %>">
                                <img class="card-img" src="<%= projects[i].images[0] %>" alt="Card image cap">
                                <div class="overlay">
                                    <span><%= projects[i].name %></span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>