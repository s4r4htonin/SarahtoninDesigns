<%- include("./partials/header") %>

<h1>Contact Me</h1>

<div class="container">
    <div class="formStyling">
        <form action="/contact" method="POST">
            <div class="form-group">
                <label class="pull-left" for="contact[email]">Email</label>
                <input class="form-control" type="email" name="contact[email]" autofocus required>
            </div>
            <div class="form-group">
                <label class="pull-left" for="contact[name]">Name</label>
                <input class="form-control" type="text" name="contact[name]" autofocus required>
            </div>
            <div class="form-group">
                <label class="pull-left" for="contact[message]">Message</label>
                <textarea rows="8" class="form-control" name="contact[message]" autofocus required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-block btn-primary">Send</button>
            </div>
        </form>
    </div>
</div>

<%- include("./partials/footer") %>